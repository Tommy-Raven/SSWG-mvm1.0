{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Phase Schema",
  "description": "A workflow phase composed of one or more instructional tasks.",
  "type": "object",
  "required": ["id", "title", "tasks"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "tasks": {
      "type": "array",
      "items": { "$ref": "task_schema.json" },
      "minItems": 1
    },
    "subphases": {
      "type": "array",
      "items": { "$ref": "phase_schema.json" }
    },
    "evaluation_schema": { "$ref": "evaluation_schema.json" }
  },
  "additionalProperties": false
}

