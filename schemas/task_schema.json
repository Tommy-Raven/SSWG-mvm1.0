{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task Schema",
  "description": "An instructional task within a phase.",
  "type": "object",
  "required": ["description"],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "inputs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "outputs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "ai_logic": {
      "type": "string"
    },
    "human_actionable": {
      "type": "boolean"
    },
    "success_criteria": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
     "metadata": {
      "$ref": "task_schema.json"
    }
  },
  "additionalProperties": false
}
